{
  "name": "hardloopschematool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:nl": "NEXT_PUBLIC_DEFAULT_LOCALE=nl next dev",
    "dev:en": "NEXT_PUBLIC_DEFAULT_LOCALE=en next dev",
    "dev:de": "NEXT_PUBLIC_DEFAULT_LOCALE=de next dev",
    "build": "next build",
    "build:nl": "NEXT_PUBLIC_DEFAULT_LOCALE=nl next build",
    "build:en": "NEXT_PUBLIC_DEFAULT_LOCALE=en next build",
    "build:de": "NEXT_PUBLIC_DEFAULT_LOCALE=de next build",
    "start": "next start",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix",
